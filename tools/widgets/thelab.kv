<GridLayoutExample@GridLayout>:
    cols: 3
    Button:
        text: "A"
        size_hint: None, 1
        width: "80dp"
    Button:
        text: "B"
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1
        width: "80dp"
    BoxLayoutExample
    Button:
        text: "F"

<AnchorLayoutExample>:
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    Button:
        text: "A"
        size: 1, 1
    BoxLayout:
        orientation: "vertical"
        size: 1, 1
        spacing: "20dp"
        Button:
            text: "B1"
            size_hint: 0.8, 0.8
            pos_hint: {"center_x" : 0.5}
        Button:
            text: "B1"
            size_hint: 0.8, 0.8
            pos_hint: {"center_x" : 0.5}
        Button:
            text: "B1"
            size_hint: 0.8, 0.8
            pos_hint: {"center_x" : 0.5}
        Button:
            text: "B1"
            size_hint: 0.8, 0.8
            pos_hint: {"center_x" : 0.5}
    Button:
        text: "C"
        size: 1, 1


